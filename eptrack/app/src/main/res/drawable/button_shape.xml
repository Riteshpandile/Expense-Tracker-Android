<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2C2C2C" /> <!-- Set the background color to black -->
            <corners android:radius="2dp" /> <!-- Set corner radius as needed -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="2dp" />
            <stroke android:color="#000000" android:width="2dp" /> <!-- Border color set to black and width as needed -->
        </shape>
    </item>
</layer-list>

